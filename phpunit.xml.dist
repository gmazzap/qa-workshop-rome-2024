<?xml version="1.0"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="./tests/php-unit/boot.php"
    colors="true"
    backupGlobals="false"
    stopOnFailure="false">

    <testsuites>
        <testsuite name="Unit">
            <directory>./tests/php-unit/cases/</directory>
        </testsuite>
    </testsuites>

</phpunit>

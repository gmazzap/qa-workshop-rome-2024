<?xml version="1.0"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
        bootstrap="./tests/php-unit/boot.php"
        stopOnDefect="false"
        colors="true"
        backupGlobals="false">

    <testsuites>
        <testsuite name="unit">
            <directory>./tests/php-unit/cases/</directory>
        </testsuite>
    </testsuites>

</phpunit>
